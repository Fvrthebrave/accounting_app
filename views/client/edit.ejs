<% include ../partials/header %>

<div class="ui main text container segment">
    <div class="ui header huge">Edit <%= client.firstName %> <%= client.lastName %></div>
    <form class="ui form" action="/clients/<%= client._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>First Name</label>
            <input type="text" name="client[firstName]" value="<%= client.firstName %>" required>
        </div>
      <div class="field">
            <label>Last Name</label>
            <input type="text" name="client[lastName]" value="<%= client.lastName %>" required>
        </div>
        <button class="ui button grey" type="submit">Submit Changes</button>
        <a href="/clients/<%= client._id %>" class="ui button basic">Go back</a>
    </form>
</div>

<% include ../partials/footer %>